{
  "manifest_version": 3,
  "name": "TikTok Ad Block",
  "version": "1.0.4",
  "description": "Auto-scrolls past sponsored and live posts on TikTok web.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
